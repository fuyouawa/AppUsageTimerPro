<UserControl x:Class="AppUsageTimerPro.TitleBlock"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:AppUsageTimerPro"
             mc:Ignorable="d" >
    <StackPanel Orientation="Vertical" Margin="5">
        <TextBlock x:Name="TxtTitle" FontSize="20" HorizontalAlignment="Left"/>
        <Border BorderThickness="0,1,0,0" BorderBrush="Black" Margin="0,5,0,0"/>
    </StackPanel>
</UserControl>
